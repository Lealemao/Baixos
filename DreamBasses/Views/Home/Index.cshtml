@model List<Baixo>
@{
    ViewData["Title"] = "Home";
    var marcas = (List<Marca>)ViewData["Marcas"];
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>Baixos</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-dark btn-filter" onclick="filter('all')">Ver
                    Todos</button>
                @foreach(var marca in marcas){    
                <button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:@marca.Cor" onclick="filter('@marca.Nome')">@marca.Nome</button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            <!-- Card Pokemon - Inicio -->
            @foreach (var baixo in Model){
                <div class="col" onclick="window.location = '/Home/Details/@baixo.Num'" >
                <div class="card shadow-sm cursor-pointer planta venenoso" @string.Join(' ', baixo.Marca)>
                    <img src="@baixo.Img" class="card-img-top" width="100%" height="100%" alt="@baixo.Name" />
                    <div class="card-body">
                        <p class="card-text mb-0">Nº @baixo.Num.ToString("000")</p>   
                        <h3 class="card-title">@baixo.Name</h3>
                        <p class="card-text mb-0">R$@baixo.Price</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="#" class="btn my-2 text-white" style="background-color:@baixo.Cor" onclick="filter('@baixo.Marca')">@baixo.Marca</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }    
            <!-- Card Pokemon - Fim -->

            <div id="zeroPokemon" class="col-lg-12 text-center d-none">
                <h1 class="my-3 text-danger">Nenhum Baixo Encontrado</h1>
            </div>
        </div>


    </div>
</div>
